<header>

</header>
<div class="container">
<h1>Hello <%= @user.first_name %>! I hope you are loving <%= @user.location %> today.</h1>
<div>
	<h3>Here are local language lovers:</h3>
		
			<div>
			<% @fluent_lang.each do |fluent_lang| %>
				<% @matches.each do |match| %>
				 <% if match.language_id == fluent_lang.language_id %>
					<%= match.language.language %>
					<%= match.level %>
					<%= match.user.first_name rescue nil %>
			<% else %>
					 <h4>There are no matches for <%= fluent_lang.language.language %></h4>
			
				<% end %>
			<% end %>
		<% end %>
		</div>




<div>
	<h3>You are fluent in:</h3>
		<% @fluent_lang.each do |match| %>
			<div>
				<%= link_to(match.language.language, { controller: "profile", action: "match", language_id: match.language_id }) %>
			</div>
		<% end %>
</div>

<div>
	<h3>You are learning:</h3>
		<% @learning_lang.each do |match| %>
			<div>
				
				<%= match.user.first_name rescue nil %>
				<%= match.language.language %>

				<%= match.level %>
			</div>
			<%#= match.user.location %>
		<% end %>
</div>
</div>
</div>
