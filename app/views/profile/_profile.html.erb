
<div class="user_profile_wrapper">
		<h4 id="user-name-profile"><%= @user.first_name %></h4>
		<div class="user-buttons">

			<%= link_to 'Request Meeting', new_meeting_path(requestee_id: @user.id), class: 'profile_button' %>

			<%= link_to 'Send message', new_message_path(to: @user.id), class: 'profile_button' %>
		</div>
	<div class="user-information">

		<h5><%= @user.location %></h5>
		<h6>Fluent in:</h6>
			<% @fluent_languages.each do |proficiency| %>
				<p><%= proficiency.language.language rescue nil %></p>
			<% end %>
		<h6><%= @user.first_name %> is learning:</h6>
			<% @nonfluent_languages.each do |proficiency| %>
				<p><%= proficiency.language.language %></p>
			<% end %>

		<h6>Bio: <br><%= @user.bio %></h6>
		<h6>Nationality:<br><%= @user.nationality %></h6>
	</div>
	<aside id="user_profile_pic"><%= image_tag(@user.avatar.url) rescue nil %></aside>
</div>


