<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Language</th>
      <th>Level</th>
      <th>Tags</th>
      <th>Title</th>
      <th>Body</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.user.first_name %></td>
        <td><%= topic.language.language %></td>
        <td><%= topic.level %></td>
        <td><%#= topic.tags %></td>
        <td><%= topic.title %></td>
        <td><%= topic.body %></td>
        <td><%= topic.approved %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

