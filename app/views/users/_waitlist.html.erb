<h3>Members waiting for approval</h3>
<table>
    <% @waitlist_users.each do |user| %>
      <tr>
        <td><%= link_to_if(can?(:read, User), "#{user.first_name}", user_path(user.id)) {} %></td>
        <td><%= "#{user.first_name}" %></td>
        <td><%= "#{user.approved}" rescue nil %></td>

        <td><%#= "#{u.roles.collect{|r| r.first_name}}" %></td>
        <td><%= link_to_if(can?(:edit, User), image_tag("/images/edit_icon.gif"), edit_user_path(user.id)) {} %></td>
        <td><%= link_to_if(can?(:delete, user), image_tag("/images/delete_icon.gif"), user, :confirm => "Are you sure?", :method => :delete) {} %></td>
      </tr>
    <% end %>
</table>