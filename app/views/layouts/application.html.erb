<!DOCTYPE html>
<html>		
	<head>
	  <title>Language Exchange</title>
	  
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>


	<div class="row" >
		<header>
			<div class="wrapper">
				<h1 class="header-logo"><%= link_to "Langauge Exchange", home_path %></h1>
			</div>
		</header>
	</div>

		<body>
			
   				<h1><%#= yield :page_header %></h1>
 				 
				<% if flash[:alert] %>
				
				<div class="wrapper">
				    <p class="flash-error"><%= flash[:alert] %></p>
				<% end %>
				
				<% if flash[:notice] %>

				<div class="wrapper">
				    <p class="flash-notice"><%= flash[:notice] %></p>
				 <% end %>
				</div>
			</div>
			<!-- <div class="col-md-4" style=""> -->
			
			<div class="wrapper">

				<%= yield %>
			</div>
		</body>

		<footer>
		<div class="footer">
			<p class="footer">Made by language lovers, for language lovers.</p>
		</div>
		</footer>
</html>
