<p id="notice"><%= notice %></p>

<h1>Pending Meeting Requests:</h1>

<table>
  <thead>
    <tr>
      <th>Requestor</th>
      <th>Requestee</th>
      <th>Meeting time</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_meetings.each do |meeting| %>
      <tr>
        <% if meeting.requestor == current_user.id %>
        <td><%= meeting.requestor %></td>
        <td><%= meeting.requestee %></td>
        <td><%= meeting.requestee %></td>
        <td><%= meeting.meeting_time %></td>
        <td><%= meeting.accepted %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
